<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="callback"
            type="edu.aku.hassannaqvi.srcDadu052020.ui.sections.SectionParticipantsSRC" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/GrpName"
            style="@style/vlinearlayout">

            <!-- sno  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVsno"
                style="@style/cardView">

                <LinearLayout style="@style/hlinearlayout">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/sno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/txtsno" />

                        <TextView
                            android:id="@+id/txtsno"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/sno"
                            android:layout_alignBottom="@id/sno"
                            android:text="@string/Q_sno" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- a  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout style="@style/hlinearlayout">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/txta"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/Q_a"
                            android:text="@string/a" />

                        <TextView
                            android:id="@+id/Q_a"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/txta"
                            android:layout_alignBottom="@id/txta"
                            android:text="@string/Q_a" />

                    </RelativeLayout>

                    <EditText
                        android:id="@+id/a"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/a" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- b  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/b" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/b"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/b"
                        android:inputType="number"
                        app:mask="##"
                        app:maxValue="90"
                        app:minValue="10"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- c  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/c" />

                    <RadioGroup
                        android:id="@+id/c"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/c1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/c1" />

                        <RadioButton
                            android:id="@+id/c2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/c2" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- d  Input   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/d" />

                    <EditText
                        android:id="@+id/d"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/d" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- e  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/e" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/e"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/e"
                        android:inputType="number"
                        app:mask="##"
                        app:maxValue="16"
                        app:minValue="0"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- f  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/f" />

                    <RadioGroup
                        android:id="@+id/f"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/f1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f1" />

                        <RadioButton
                            android:id="@+id/f2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f2" />

                        <RadioButton
                            android:id="@+id/f3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f3" />

                        <RadioButton
                            android:id="@+id/f4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f4" />

                        <RadioButton
                            android:id="@+id/f5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/f5" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- g  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/g" />

                    <RadioGroup
                        android:id="@+id/g"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/g1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/g1" />

                        <RadioButton
                            android:id="@+id/g2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/g2" />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- h  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/h" />

                    <com.edittextpicker.aliazaz.EditTextPicker
                        android:id="@+id/h"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="12dp"
                        android:hint="@string/h"
                        android:inputType="number"
                        app:mask="##"
                        app:maxValue="40"
                        app:minValue="1"
                        app:type="range" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- i  Radio   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="12dp"
                        android:text="@string/i" />

                    <RadioGroup
                        android:id="@+id/i"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:id="@+id/i1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i1" />

                        <RadioButton
                            android:id="@+id/i2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i2" />

                        <RadioButton
                            android:id="@+id/i3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i3" />

                        <RadioButton
                            android:id="@+id/i4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i4" />

                        <RadioButton
                            android:id="@+id/i5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i5" />

                        <RadioButton
                            android:id="@+id/i6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i6" />

                        <RadioButton
                            android:id="@+id/i7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i7" />

                        <RadioButton
                            android:id="@+id/i8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i8" />

                        <RadioButton
                            android:id="@+id/i9"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i9" />

                        <RadioButton
                            android:id="@+id/i10"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i10" />

                        <RadioButton
                            android:id="@+id/i11"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i11" />

                        <RadioButton
                            android:id="@+id/i12"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i12" />

                        <RadioButton
                            android:id="@+id/i13"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i13" />

                        <RadioButton
                            android:id="@+id/i14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i14" />

                        <RadioButton
                            android:id="@+id/i96"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/i96" />

                        <EditText
                            android:id="@+id/i96x"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="12dp"
                            android:hint="@string/i96"
                            android:tag="i96"
                            android:text='@{i96.checked? i96x.getText().toString() : ""}'
                            android:visibility='@{i96.checked? View.VISIBLE : View.GONE}' />
                    </RadioGroup>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_End"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="Cancel" />

                <Button
                    android:id="@+id/btn_Continue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:onClick="@{() -> callback.BtnContinue()}"
                    android:text="Save" />

                <Button
                    android:id="@+id/btn_AddMore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Add More" />
                <!--'onClick' for btn_End will NOT change and always call 'endInterview'-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>