            <!-- sno  Input-Numeric   -->
            <androidx.cardview.widget.CardView
                android:id="@+id/fldGrpCVsno"
                style="@style/cardView">

                <LinearLayout style="@style/hlinearlayout">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/bottom">

                        <TextView
                            android:id="@+id/sno"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@id/txtsno" />

                        <TextView
                            android:id="@+id/txtsno"
                            style="@style/quesNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@id/sno"
                            android:layout_alignBottom="@id/sno"
                            android:text="@string/Q_sno" />

                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


